{
    "tasks": [
        {
            "type": "shell",
            "label": "Post file to the server",
            "command": "node",
            "args": [
                "${workspaceFolder}/bin/otojsc.js",
                "${relativeFile}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Post selection to the server",
            "command": "node",
            "args": [
                "${workspaceFolder}/bin/otojsc.js",
                "--selection",
                "${relativeFile}",
                "${selectedText}"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}
